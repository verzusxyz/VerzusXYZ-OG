rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Game data is read-only for authenticated users.
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if false; // Game data should be managed by administrators.
    }

    // Users can only create and read their own game logs.
    match /gameLogs/{gameLogId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Game logs should be immutable.
    }
  }
}
